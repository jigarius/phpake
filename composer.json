{
  "name": "jigarius/phpake",
  "description": "Phpake is a make-like utility built for PHP.",
  "version": "0.5.0-alpha.1",
  "homepage": "https://github.com/jigarius/phpake",
  "license": "GPL-3.0-only",
  "keywords": [],
  "authors": [
    {
      "name": "Jigar Mehta",
      "homepage": "https://jigarius.com/",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">= 8.0",
    "symfony/console": "^5.3",
    "phpdocumentor/reflection-docblock": "^5.2"
  },
  "autoload": {
    "psr-4": {
      "Phpake\\": "src/"
    },
    "classmap": [
      "src/Phpake.php"
    ]
  },
  "bin": ["bin/phpake"],
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.6",
    "phpunit/phpunit": "^9.5",
    "drupal/coder": "^8.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1"
  },
  "scripts": {
    "lint": "composer exec phpcs",
    "test": "XDEBUG_MODE=coverage composer exec phpunit"
  }
}
