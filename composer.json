{
  "name": "jigarius/phpake",
  "description": "A make-like built on PHP.",
  "type": "project",
  "authors": [
    {
      "name": "Jigar Mehta",
      "email": "hello@jigarius.com",
      "homepage": "https://jigarius.com/"
    }
  ],
  "require": {
    "symfony/console": "^5.3"
  },
  "autoload": {
    "psr-4": {
      "PHPake\\": "src/"
    },
    "classmap": [
      "src/PHPake.php"
    ]
  },
  "bin": ["bin/phpake"],
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.6",
    "phpunit/phpunit": "^9.5",
    "drupal/coder": "^8.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1"
  },
  "scripts": {
    "lint": "composer exec phpcs",
    "test": "composer exec phpunit"
  }
}
