#!/usr/bin/env php
<?php

if (php_sapi_name() !== 'cli') exit;

require_once __DIR__ . '/../vendor/autoload.php';

try {
  $phpake = new PHPake();
  $phpakefile = $phpake->discoverPhpakefile();
  $phpake->run();
}
catch (Exception $e) {
  echo "ERROR {$e->getCode()}: {$e->getMessage()}";
  exit(1);
}

exit(0);
