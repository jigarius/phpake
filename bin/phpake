#!/usr/bin/env php
<?php

if (php_sapi_name() !== 'cli') exit;

require_once __DIR__ . '/../vendor/autoload.php';

use PHPake\PHPakeFile;

try {
  $phpake = new PHPake();
  $phpake->require(PHPakeFile::discover());
  $phpake->run();
}
catch (Exception $e) {
  echo "ERROR {$e->getCode()}: {$e->getMessage()}";
  exit(1);
}

exit(0);
